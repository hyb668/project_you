<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent" android:id="@+id/ll_ad" android:background="@drawable/app_white_bg"
        android:layout_height="match_parent"  android:orientation="horizontal" >
        <ImageView  android:id="@+id/img_ad"
            android:layout_width="match_parent" android:layout_height="match_parent"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btn_skip" android:layout_marginRight="15dp"
            android:background="@drawable/btn_tiaoguo" android:gravity="center"  android:layout_gravity="right" android:layout_marginTop="33dp" />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent" android:id="@+id/ll_launch" android:background="@drawable/start_bg"
        android:layout_height="match_parent"  android:orientation="horizontal" android:visibility="visible">
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="178dp"
            android:src="@drawable/start_icon1" />

        <TextView
            android:id="@+id/txt_update_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>


</RelativeLayout>